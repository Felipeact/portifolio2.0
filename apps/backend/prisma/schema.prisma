generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id          String   @id @default(uuid())
  type        String
  engine      String
  thumbnail   String
  title       String
  description String
  description2 String
  description3 String
  description4 String
  description5 String

  createdAt   DateTime @default(now())
  
  photos      Photo[]
  videos      Video[]
}

model Project {
  id          String   @id @default(uuid())
  type        String
  engine      String
  title       String
  description String
  description2 String
  description3 String
  description4 String
  description5 String

  createdAt   DateTime @default(now())

  photos      Photo[]
  videos      Video[]
}

model Photo {
  id          String   @id @default(uuid())
  url         String?
  title       String?
  size        String?
  description String?
  blogId      String?
  projectId   String?

  blog    Blog?    @relation(fields: [blogId], references: [id])
  project Project? @relation(fields: [projectId], references: [id])
}

model Video {
  id          String   @id @default(uuid())
  url         String?
  title       String?
  size        String?
  description String?
  blogId      String?
  projectId   String?

  blog    Blog?    @relation(fields: [blogId], references: [id])
  project Project? @relation(fields: [projectId], references: [id])
}